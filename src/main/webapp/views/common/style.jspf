<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>

<style>
    * {box-sizing: border-box;}

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .page_body {
        margin : 30px;
    }
    .left-part {
        float: left;
        width : 70%;
    }
    .right-part {
        width : 30%;
    }

    .first_welcome_div {
        margin: 20px;
    }

    .header {
        overflow: hidden;
        background-color: #8070B8;
        padding: 10px 10px;
